{
  "name": "traducere",
  "displayName": "traducere",
  "description": "Translate within your editor, either by modifying the source, or by presenting a preview tooltip",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "publisher": "chris-pikul",
  "author": {
    "name": "Chris Pikul",
    "email": "ChrisPikul510@gmail.com"
  },
  "categories": [
    "Other"
  ],
  "license": "Apache-2.0",
  "keywords": [
    "translate",
    "language",
    "comments",
    "localize"
  ],
  "galleryBanner": {
    "theme": "dark",
    "color": "#162421"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "homepage": "https://github.com/chris-pikul/traducere",
  "repository": {
    "type": "git",
    "url": "https://github.com/chris-pikul/traducere.git"
  },
  "bugs": {
    "url": "https://github.com/chris-pikul/traducere/issues"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Traducere",
      "properties": {
        "traducere.enableContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Enabled showing Traducere tools in the context menu"
        },
        "traducere.backendService": {
          "type": "string",
          "enum": ["google", "microsoft", "deepl"],
          "default": "google",
          "description": "Selects the desired backend translation service to use"
        },
        "traducere.enableTooltip": {
          "type": "boolean",
          "default": true,
          "description": "Enabled showing tooltips on hovering comments with translated content"
        },
        "traducere.cacheComments": {
          "type": "boolean",
          "default": true,
          "description": "When true, comment text will be hashed to save on bandwidth when fetching translations"
        }
      }
    },
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
